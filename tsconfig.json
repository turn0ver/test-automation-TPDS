{
    "compilerOptions": {
      "target": "ES2021",
      "module": "commonjs",
      "moduleResolution": "node",
      "allowJs": false,
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "types": ["node", "@playwright/test"],
      "rootDir": "./",
      "baseUrl": ".",
      "paths": {
        "@pages/*": ["src/pages/*"],
        "@components/*": ["src/components/*"],
        "@fixtures/*": ["tests/fixtures/*"],
        "@utils/*": ["src/utils/*"]
      }
    },
    "include": ["src/**/*.ts", "tests/**/*.ts", "playwright.config.ts", "fixtures.ts"]
  }
  