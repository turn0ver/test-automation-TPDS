	"item": [
		{
			"name": "Auth - Register (Strapi)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"username\": \"test-user\",\n  \"email\": \"test-user@example.com\",\n  \"password\": \"Password123!\"\n}"
				},
				"url": {
					"raw": "{{cms_base_url}}/register",
					"host": [
						"{{cms_base_url}}"
					],
					"path": [
						"register"
					]
				},
				"description": "Registers a new user in Strapi. This is the same API the NEXT.js app uses when creating accounts on /register."
			},
			"response": []
		},
		{
			"name": "Auth - Login (Strapi)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"identifier\": \"test-user@example.com\",\n  \"password\": \"Password123!\"\n}"
				},
				"url": {
					"raw": "{{cms_base_url}}/login",
					"host": [
						"{{cms_base_url}}"
					],
					"path": [
						"login"
					]
				},
				"description": "Logs in a user and returns JWT + user data. This token is normally used by the storefront for authenticated flows (checkout, profile etc)."
			},
			"response": []
		},
		{
			"name": "Storefront - Checkout (NEXT.js API)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"disabled": true
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"cartItems\": [\n    {\n      \"productId\": 1,\n      \"variantId\": 1,\n      \"quantity\": 1\n    }\n  ],\n  \"shippingAddress\": {\n    \"fullName\": \"Test User\",\n    \"street\": \"Test Street 123\",\n    \"city\": \"Curitiba\",\n    \"state\": \"PR\",\n    \"zipCode\": \"80000-000\",\n    \"country\": \"BR\"\n  },\n  \"paymentMethod\": \"card\"\n}"
				},
				"url": {
					"raw": "{{store_base_url}}{{checkout_path}}",
					"host": [
						"{{store_base_url}}{{checkout_path}}"
					]
				},
				"description": "Checkout entrypoint handled by the NEXT.js app.\n\nIMPORTANT: update `checkout_path` to the real route used by the project (e.g. `/api/orders`, `/api/checkout/session`, etc.). You can confirm the exact path via DevTools Network tab when submitting the checkout form."
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "cms_base_url",
			"value": "http://localhost:1337"
		},
		{
			"key": "store_base_url",
			"value": "http://localhost:3000"
		},
		{
			"key": "checkout_path",
			"value": "/api/checkout"
		}
	]
}